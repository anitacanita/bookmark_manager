<!-- in /views/links/index.erb -->
<body class="container">
  <h1> Links </h1>

    <ul id='links'>
      <% @links.each do |link| %>
        <li>
          Title: <%= link.title %>
          URL:   <%= link.url   %>
        </li>
      <% end %>

      <form action="/new_link">
        <button>Add a link</button>
      </form>

    </ul>

</body>
